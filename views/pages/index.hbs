<div class="card shadow">
    <div class="card-header border-0">
        <div class="float-left">
            <h1>Pages</h1>
        </div>
        <div class="float-right">
            <button class="btn btn-outline-primary run-scraper">Scrape</button>
        </div>
    </div>
</div>
{{#each websites}}
    <div class="card shadow my-4">
        <div class="card-header bg-indigo border-0">
            <h2 class="text-white">{{this.title}}</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="real-time mt-4">
                        <div class="site-entry mt-4" data-site="{{this.title}}">
                            <div class="progress-container my-4">
                                <div class="card shadow">
                                    <div class="card-body bg-gradient-white text-dark">
                                        <span>Scraper progress</span>
                                        <div class="progress-wrapper">
                                            <div class="progress-info">
                                                <div class="progress-label">
                                                    <span>Article scraping</span>
                                                </div>
                                                <div class="progress-percentage">
                                                    <span>/</span>
                                                </div>
                                            </div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar"
                                                     aria-valuenow="0"
                                                     aria-valuemin="0" aria-valuemax="0" data-value="0" data-max="0"
                                                     style="width: 0%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-bordered table-data dt-responsive"
                                   data-site="{{this.title}}">
                                <thead>
                                <tr>
                                    <th>CreatedAt</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Link</th>
                                </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{{/each}}