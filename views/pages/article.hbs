<article class="single-article">
    <h2><a href="{{article.url}}" target="_blank">{{article.title}}</a></h2>
    <div class="article-head">
        <div>
            <span>{{formatDate article.meta.publishedAt}} | {{article.meta.modifiedAt}}</span>
        </div>
        <div>
            <span>AVTOR: {{article.author}}</span>
        </div>
        <div>
            <span>Predviden ƒças branja: {{article.meta.readingTime}}</span>
        </div>
    </div>
    <img src="{{article.mainImage}}" alt="Main image" class="article-main-image">
    <hr>
    <div class="article-body">
        <div class="article-summary">
            {{article.summary}}
        </div>
        <div class="article-content">
            {{{article.content}}}
        </div>
    </div>
</article>
