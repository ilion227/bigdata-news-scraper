<div class="card shadow">
    <div class="card-header border-0">
        <h1>Articles</h1>
    </div>
</div>

<div class="card shadow my-4">
    <div class="card-header bg-gradient-primary"></div>
    <div class="card-body">
        <table class="table table-striped table-bordered dt-responsive" id="articlesTable">
            <thead>
            <tr>
                <th>CreatedAt</th>
                <th>Title</th>
                <th>Author</th>
                <th>Site</th>
                <th>Link</th>
            </tr>
            </thead>
            <tbody>
            {{#each articles}}
                <tr>
                    <td>{{this.createdAt}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.author}}</td>
                    <td><span class="badge badge-primary">{{this.site}}</span></td>
                    <td><a target="_blank" href="/article/{{this._id}}"
                           class="badge badge-pill">INFO</a><a target="_blank" href="{{this.url}}"
                                                               class="badge badge-pill badge-success"><i
                            class="fa fa-external-link-alt"></i></a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>