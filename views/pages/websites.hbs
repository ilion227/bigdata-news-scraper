<div class="card shadow">
    <div class="card-header border-0">
        <h1>Websites</h1>
    </div>
</div>


<div class="row">
    {{#each websites}}
        <div class="my-4 col-md-4">
            <a href="/website/{{this._id}}">
                <div class="card bg-gradient-red ">
                    <div class="card-body">
                        <div class="text-white">
                            <div>
                                <h1 class="text-white"><i class="fa fa-globe"></i> {{this.title}}</h1>
                                <p>384 Articles</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {{/each}}
</div>
